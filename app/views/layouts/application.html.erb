<!-- FAIR USE -->
<!DOCTYPE html>
<html>
  <head>
    <title>Journal</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= favicon_link_tag asset_path("favicon-32x32.png") %>
    <%= stylesheet_link_tag '//cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.css' %>
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
    <%= render 'layouts/navbar'  %>

    <main>
      <div class="container">
        <% if notice %>
          <p class="notice alert alert-info w-75 mx-auto"><%= notice %></p>
        <% elsif alert %>
          <p class="alert alert-warning w-75 mx-auto"><%= alert %></p>
        <% end %>

        <div class="w-75 mx-auto">
          <%= yield %>
        </div>
      </div>
    </main>
  </body>
</html>
