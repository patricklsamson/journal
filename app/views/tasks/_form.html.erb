<%= form_with model: [@category, @category.tasks.build] do |f| %>
  <div class="row">
    <div class="col-md-7">
      <div class="form-floating">
        <%= f.text_area :details, class: "form-control", placeholder: "Details" %>
        <%= f.label :details %>
      </div>
    </div>

    <div class="col-sm-9 col-md-3 mt-2 mt-md-0">
      <div class="form-floating">
        <%= f.datetime_field :priority, id: 'datepicker', type: '', class: "form-control", placeholder: "Priority Date" %>
        <%= f.label :priority, 'Priority Date' %>
      </div>
    </div>

    <div class="col-sm-3 col-md-2 mt-2 mt-md-0 d-flex align-items-center">
      <%= f.submit "Add Task", class: "btn btn-success" %>
    </div>
  </div>
<% end %>
