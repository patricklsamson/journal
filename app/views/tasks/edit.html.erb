<% if current_user %>
  <%= form_with model: [@task.category, @task] do |f| %>
    <% if @task.errors.any? %>
      <div>
        <ul>
          <% @task.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= f.label :details %>
    <%= f.text_area :details %>
    <%= f.label :priority, 'Priority Date' %>
    <%= f.datetime_field :priority, id: 'datepicker', type: '' %>
    <%= f.submit %>
  <% end %>
<% else %>
  <%= render 'layouts/error' %>
<% end %>
